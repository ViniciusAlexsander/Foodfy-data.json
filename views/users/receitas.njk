{% extends "users/layout.njk" %}
{% block head %}
  <title>Foodfy - Receitas</title>
  {% endblock%}
  {% block content %}
    <div class="receitas">
      <h2>Nossas receitas</h2>
      <div class="cards">
        {% for item in items %}
          <div class="card" id="{{item.id}}">
            <img src="{{item.image}}"/>
            <div class="cardInfo">
              <p class="title">{{item.title}}</p>
              <p class="autor">por
                {{item.author}}</p>
            </div>
          </div>
          {% endfor%}

        </div>
      </div>
      <script src="/scripts.js"></script>
      {% endblock%}